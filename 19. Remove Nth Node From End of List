//19. Remove Nth Node From End of List
//2017.8.23
//链表问题，删除一个指定位置的节点，两个指针。

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        if(!head) return head;
    
        ListNode *p1 = head;
        ListNode *p2 = head;
        ListNode *pre = NULL;
        
        for(int i = 0; i < n-1; ++i)
        {
            p2 = p2->next;
        }
        
        while(p2->next)
        {
            pre = p1;
            p1 = p1->next;
            p2 = p2->next;
        }
        
        if(pre == NULL) 
        {
            head = p1->next;
            delete p1;
        }
        else
        {
            pre->next = p1->next;
            delete p1;
        }
        return head;
    }
};
